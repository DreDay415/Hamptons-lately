---
export interface Props {
	title: string;
	description?: string;
	image?: string;
}
const { title, description = "The Coverage the Hamptons Deserves", image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Essential SEO -->
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image || "/og-image.svg"} />
		<meta property="og:url" content={Astro.url.href} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image || "/og-image.svg"} />
		
		<!-- Optimized Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
		
		<!-- Optimized CSS Reset -->
		<style is:global>
			*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
			html{font-size:16px;scroll-behavior:smooth}
			body{
				font-family:'Inter',-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;
				line-height:1.6;
				color:#1a1a1a;
				background:linear-gradient(135deg,#2e7061 0%,#225744 100%);
				min-height:100vh;
				-webkit-font-smoothing:antialiased;
				-moz-osx-font-smoothing:grayscale
			}
			h1,h2,h3,h4,h5,h6{
				font-family:'Playfair Display',serif;
				font-weight:600;
				line-height:1.2;
				margin-bottom:1rem;
				color:#2e7061
			}
			h1{font-size:2.5rem}
			h2{font-size:2rem}
			h3{font-size:1.75rem}
			h4{font-size:1.5rem}
			p{margin-bottom:1rem;color:#4a4a4a}
			a{color:#2e7061;text-decoration:none;transition:color 0.3s ease}
			a:hover{color:#225744;text-decoration:underline}
			.container{max-width:1200px;margin:0 auto;padding:0 1rem}
			/* Article Content Container for Readability */
			.article-container{
				background:white;
				border-radius:16px;
				box-shadow:0 8px 30px rgba(46,112,97,0.1);
				margin:2rem 0;
				overflow:hidden
			}
			.article-container .container{padding:3rem 2rem}
			@media (max-width:768px){
				.container{padding:0 0.75rem}
				.article-container .container{padding:2rem 1rem}
				h1{font-size:2rem}
				h2{font-size:1.75rem}
				h3{font-size:1.5rem}
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
