---
import { SEO } from "astro-seo";

export interface Props {
	title: string;
	description?: string;
	image?: string;
}
const { title, description = "The Coverage the Hamptons Deserves", image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			description={description}
			canonical={Astro.url.href}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image || "/og-image.jpg",
					url: Astro.url.href,
				},
				optional: {
					description: description,
					siteName: "Hamptons Lately",
				}
			}}
			twitter={{
				card: "summary_large_image",
				site: "@hamptonslately",
				creator: "@hamptonslately",
				title: title,
				description: description,
				image: image || "/og-image.jpg",
			}}
			extend={{
				meta: [
					{ name: "author", content: "Hamptons Lately Staff" },
					{ name: "robots", content: "index, follow" },
					{ name: "viewport", content: "width=device-width, initial-scale=1.0" },
				],
				link: [
					{ rel: "icon", href: "/favicon.svg" },
					{ rel: "canonical", href: Astro.url.href },
				]
			}}
		/>
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Modern CSS Reset -->
		<style is:global>
			*,
			*::before,
			*::after {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			html {
				font-size: 16px;
				scroll-behavior: smooth;
			}

			body {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #1a1a1a;
				/* Professional gradient background using brand colors */
				background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
				min-height: 100vh;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}

			/* Typography */
			h1, h2, h3, h4, h5, h6 {
				font-family: 'Playfair Display', serif;
				font-weight: 600;
				line-height: 1.2;
				margin-bottom: 1rem;
				color: #2e7061;
			}

			h1 { font-size: 2.5rem; }
			h2 { font-size: 2rem; }
			h3 { font-size: 1.75rem; }
			h4 { font-size: 1.5rem; }
			h5 { font-size: 1.25rem; }
			h6 { font-size: 1.1rem; }

			p {
				margin-bottom: 1rem;
				color: #4a4a4a;
			}

			a {
				color: #2e7061;
				text-decoration: none;
				transition: all 0.3s ease;
			}

			a:hover {
				color: #225744;
				text-decoration: underline;
			}

			/* Container */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			/* Buttons */
			.btn {
				display: inline-block;
				padding: 0.75rem 1.5rem;
				background: #2e7061;
				color: white;
				border: none;
				border-radius: 8px;
				font-weight: 500;
				text-decoration: none;
				transition: all 0.3s ease;
				cursor: pointer;
			}

			.btn:hover {
				background: #225744;
				transform: translateY(-2px);
				box-shadow: 0 10px 25px rgba(46, 112, 97, 0.3);
			}

			.btn-secondary {
				background: #225744;
				color: white;
			}

			.btn-secondary:hover {
				background: #2e7061;
				color: white;
			}

			/* Cards */
			.card {
				background: white;
				border-radius: 12px;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
				transition: all 0.3s ease;
				overflow: hidden;
			}

			.card:hover {
				transform: translateY(-4px);
				box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
			}

			/* Grid */
			.grid {
				display: grid;
				gap: 2rem;
			}

			.grid-cols-1 { grid-template-columns: repeat(1, 1fr); }
			.grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
			.grid-cols-3 { grid-template-columns: repeat(3, 1fr); }
			.grid-cols-4 { grid-template-columns: repeat(4, 1fr); }

			/* Responsive */
			@media (max-width: 768px) {
				.container {
					padding: 0 0.75rem;
				}
				
				h1 { font-size: 2rem; }
				h2 { font-size: 1.75rem; }
				h3 { font-size: 1.5rem; }
				
				.grid-cols-2,
				.grid-cols-3,
				.grid-cols-4 {
					grid-template-columns: 1fr;
				}
			}

			@media (max-width: 1024px) {
				.grid-cols-3,
				.grid-cols-4 {
					grid-template-columns: repeat(2, 1fr);
				}
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
