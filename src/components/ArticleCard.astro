---
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
	title: string;
	description: string;
	date: string;
	image: string;
	imageAlt: string;
	slug: string;
	author?: string;
	featured?: boolean;
	category?: string;
}
const { title, description, date, image, imageAlt, slug, author = "Hamptons Lately Staff", featured = false, category = "Hamptons News" } = Astro.props;
---

<article class={`article-card ${featured ? 'featured' : ''}`}>
	<a href={`/articles/${slug}`} class="card-link">
		<div class="article-image">
			<OptimizedImage 
				src={image} 
				alt={imageAlt} 
				width={800}
				height={450}
				priority={featured}
				lazy={!featured}
			/>
			<div class="image-overlay">
				<span class="read-more">Read Article â†’</span>
			</div>
		</div>
		<div class="article-content">
			<div class="article-meta">
				<span class="article-category">{category}</span>
				<span class="article-date">{date}</span>
			</div>
			<h4 class="article-title">{title}</h4>
			<p class="article-description">{description}</p>
			<div class="article-footer">
				<span class="read-time">3 min read</span>
				<span class="article-author">by {author}</span>
			</div>
		</div>
	</a>
</article>

<style>
	.article-card {
		background: white;
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		border: 1px solid #f1f5f9;
		height: 100%;
	}

	.article-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 25px rgba(46, 112, 97, 0.15);
	}

	.card-link {
		display: block;
		text-decoration: none;
		color: inherit;
		height: 100%;
	}

	.article-image {
		position: relative;
		overflow: hidden;
		aspect-ratio: 16/9;
	}

	.image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(46, 112, 97, 0.8) 0%, rgba(34, 87, 68, 0.6) 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.article-card:hover .image-overlay {
		opacity: 1;
	}

	.read-more {
		color: white;
		font-weight: 600;
		font-size: 1.1rem;
	}

	.article-content {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.article-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
		font-size: 0.875rem;
	}

	.article-category {
		background: #f3f4f6;
		color: #374151;
		padding: 0.25rem 0.75rem;
		border-radius: 20px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.article-date {
		color: #6b7280;
		font-weight: 500;
	}

	.article-title {
		font-size: 1.25rem;
		font-weight: 600;
		line-height: 1.3;
		margin-bottom: 1rem;
		color: #1f2937;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.article-description {
		color: #6b7280;
		line-height: 1.6;
		margin-bottom: 1.5rem;
		flex-grow: 1;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.article-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-top: auto;
		padding-top: 1rem;
		border-top: 1px solid #f1f5f9;
	}

	.read-time {
		color: #9ca3af;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.article-author {
		color: #9ca3af;
		font-style: italic;
		font-size: 0.875rem;
	}

	@media (max-width: 768px) {
		.article-content {
			padding: 1rem;
		}
	}
</style>
