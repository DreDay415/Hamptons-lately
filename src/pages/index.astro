---

<Layout 
	title="Hamptons Lately - The Coverage the Hamptons Deserves"
	description="Your daily dose of Hamptons satire and social commentary. Breaking news from the end of Long Island where the 1% meets the 0.1% and everyone pretends to be local."
	image="/og-image.svg"
>
	<Header />
	
	<main class="main">
		<!-- Featured Articles Section -->
		<section class="featured-section">
			<div class="container">
				<div class="section-header">
					<h1>Hamptons Lately</h1>
					<p>The Coverage the Hamptons Deserves</p>
				</div>
				<div class="featured-grid">
					{featuredArticles.map((article) => (
						<ArticleCard 
							title={article.title}
							description={article.description}
							date={article.date}
							image={article.image}
							imageAlt={article.imageAlt}
							slug={article.slug}
							featured={article.featured}
							category={article.category}
						/>
					))}
				</div>
			</div>
		</section>

		<!-- Latest Articles Section -->
		<section class="latest-section">
			<div class="container">
				<div class="section-header">
					<h2>Latest Articles</h2>
				</div>
				<div class="latest-grid">
					{latestArticles.map((article) => (
						<ArticleCard 
							title={article.title}
							description={article.description}
							date={article.date}
							image={article.image}
							imageAlt={article.imageAlt}
							slug={article.slug}
							category={article.category}
						/>
					))}
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.main {
		min-height: 100vh;
		padding: 2rem 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h1 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: #2e7061;
	}

	.section-header h2 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: #2e7061;
	}

	.section-header p {
		font-size: 1.2rem;
		color: #6b7280;
	}

	.featured-section {
		background: white;
		border-radius: 20px;
		margin: 2rem 0;
		box-shadow: 0 8px 30px rgba(46, 112, 97, 0.1);
		padding: 3rem 0;
	}

	.featured-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
		margin-top: 2rem;
	}

	.latest-section {
		background: white;
		border-radius: 20px;
		margin: 2rem 0;
		box-shadow: 0 8px 30px rgba(46, 112, 97, 0.1);
		padding: 3rem 0;
	}

	.latest-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	@media (max-width: 768px) {
		.featured-grid {
			grid-template-columns: 1fr;
		}
		
		.section-header h1 {
			font-size: 2.5rem;
		}
		
		.section-header h2 {
			font-size: 2rem;
		}
	}
</style>