</Layout>

<style>
	.main {
		min-height: 100vh;
		background: #f8fafc;
	}

	/* Hero Section - Marin Lately Style */
	.hero {
		background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
		color: white;
		padding: 4rem 0 3rem 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
		opacity: 0.3;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: white;
		text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
	}

	.hero-subtitle {
		font-size: 1.1rem;
		margin-bottom: 1.5rem;
		color: #cbd5e1;
		font-weight: 400;
	}

	.hero-quote {
		margin: 1.5rem 0;
		padding: 1.5rem;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.hero-quote blockquote {
		font-size: 1rem;
		font-style: italic;
		color: #ffffff;
		margin: 0;
		quotes: '"' '"' "'" "'";
	}

	.hero-quote blockquote::before {
		content: open-quote;
		font-size: 1.5rem;
		color: #ffffff;
		line-height: 0;
		margin-right: 0.5rem;
		vertical-align: -0.4em;
	}

	.hero-quote blockquote::after {
		content: close-quote;
		font-size: 1.5rem;
		color: #ffffff;
		line-height: 0;
		margin-left: 0.5rem;
		vertical-align: -0.4em;
	}

	/* Featured Articles Section - Above the fold */
	.featured-articles {
		padding: 3rem 0;
		background: white;
		margin: 0;
	}

	.featured-grid {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		gap: 2rem;
		margin-top: 2rem;
	}

	/* Latest Articles Section */
	.latest-articles {
		padding: 3rem 0;
		background: #f8fafc;
	}

	.latest-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-top: 2rem;
	}

	/* Section Headers */
	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.section-header h2 {
		font-size: 2rem;
		margin: 0;
		color: #2e7061;
		font-weight: 700;
	}

	.section-header p {
		font-size: 1rem;
		color: #6b7280;
		margin: 0;
	}

	.view-all-link {
		color: #2e7061;
		text-decoration: none;
		font-weight: 500;
		font-size: 1rem;
		transition: color 0.3s ease;
	}

	.view-all-link:hover {
		color: #225744;
		text-decoration: underline;
	}

	/* Newsletter Section */
	.newsletter-section {
		padding: 3rem 0;
		background: white;
	}

	.newsletter-card {
		background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
		color: white;
		padding: 3rem;
		border-radius: 16px;
		text-align: center;
		box-shadow: 0 10px 30px rgba(46, 112, 97, 0.2);
	}

	.newsletter-content h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
		color: white;
	}

	.newsletter-content p {
		font-size: 1.1rem;
		margin-bottom: 2rem;
		color: #cbd5e1;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
	}

	.newsletter-form {
		display: flex;
		gap: 1rem;
		max-width: 400px;
		margin: 0 auto;
	}

	.newsletter-form input {
		flex: 1;
		padding: 0.75rem 1rem;
		border: none;
		border-radius: 8px;
		font-size: 1rem;
	}

	.newsletter-form input:focus {
		outline: none;
		box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
	}

	.newsletter-form .btn {
		background: white;
		color: #2e7061;
		border: none;
		padding: 0.75rem 1.5rem;
		border-radius: 8px;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.newsletter-form .btn:hover {
		background: #f8fafc;
		transform: translateY(-2px);
	}

	/* Weekend Section */
	.weekend-section {
		padding: 3rem 0;
		background: white;
	}

	.weekend-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-top: 2rem;
	}

	.weekend-card {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		border: 1px solid #f1f5f9;
		text-align: center;
		transition: all 0.3s ease;
	}

	.weekend-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
	}

	.weekend-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.weekend-card h3 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		color: #2e7061;
	}

	.weekend-card p {
		color: #6b7280;
		line-height: 1.6;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.featured-grid {
			grid-template-columns: 1fr 1fr;
		}

		.latest-grid {
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		}

		.weekend-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 3rem 0 2rem 0;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.featured-grid {
			grid-template-columns: 1fr;
		}

		.latest-grid,
		.weekend-grid {
			grid-template-columns: 1fr;
		}

		.section-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
		}

		.section-header h2 {
			font-size: 1.75rem;
		}

		.newsletter-form {
			flex-direction: column;
		}

		.newsletter-content h2 {
			font-size: 1.75rem;
		}

		.newsletter-content p {
			font-size: 1rem;
		}
	}
</style>

<script>
	// Interactive weather report
	document.addEventListener('DOMContentLoaded', function() {
		const weatherReport = document.getElementById('weather-report');
		
		if (weatherReport) {
			weatherReport.addEventListener('click', function() {
				const forecasts = [
					"Sunny with a chance of pretentiousness",
					"Partly cloudy with scattered Range Rovers",
					"Clear skies, perfect for Instagram photos",
					"Light breeze, ideal for beach yoga",
					"High humidity, great for complaining about the weather"
				];
				
				const randomForecast = forecasts[Math.floor(Math.random() * forecasts.length)];
				this.innerHTML = `
					<div class="weather-icon">üå§Ô∏è</div>
					<div class="weather-content">
						<h3>Today's Forecast</h3>
						<p>${randomForecast}</p>
					</div>
				`;
				
				// Reset after 3 seconds
				setTimeout(() => {
					this.innerHTML = `
						<div class="weather-icon">üå§Ô∏è</div>
						<div class="weather-content">
							<h3>Hamptons Weather Report</h3>
							<p>Click for today's forecast</p>
						</div>
					`;
				}, 3000);
			});
		}
	});

	// Easter egg: Press 'H' for Hamptons facts
	document.addEventListener('keydown', function(e) {
		if (e.key.toLowerCase() === 'h') {
			const facts = [
				"Did you know? The word 'Hamptons' comes from the Old English 'ham' meaning 'home' and 'ton' meaning 'town'.",
				"Fun fact: The Hamptons has more millionaires per capita than anywhere else in the US.",
				"Interesting: The average home price in the Hamptons is $2.5 million.",
				"Trivia: The Hamptons was originally a farming community before becoming a summer destination.",
				"Fact: There are more Range Rovers per square mile in the Hamptons than anywhere else in the world."
			];
			
			const randomFact = facts[Math.floor(Math.random() * facts.length)];
			alert(`Hamptons Fact: ${randomFact}`);
		}
	});
</script>

