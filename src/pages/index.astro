const hamptonsQuotes = [
	"Remember: if you can't afford it, you probably shouldn't be here.",
	"Local tip: The best time to go to the beach is when no one else is there.",
	"Pro tip: If you have to ask the price, you can't afford it.",
	"Remember: 'Weekend warrior' is not a compliment in these parts.",
	"Local wisdom: The more expensive the restaurant, the smaller the portions.",
	"Hamptons rule: If you see a celebrity, pretend you don't recognize them.",
	"Remember: 'Affordable' is a relative term here.",
	"Local secret: The best parking spots are the ones you pay $50 for."
];

const randomQuote = hamptonsQuotes[Math.floor(Math.random() * hamptonsQuotes.length)];
---

<Layout title="Hamptons Lately - The Coverage the Hamptons Deserves">
	<Header />
	
	<main class="main">
		<!-- Hero Section -->
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<h1>Breaking News from the End of Long Island</h1>
					<p class="hero-subtitle">Where the 1% meets the 0.1% and everyone pretends to be local</p>
					<div class="hero-quote">
						<blockquote>"{randomQuote}"</blockquote>
					</div>
					<div class="hero-actions">
						<a href="#latest-articles" class="btn">Read Latest News</a>
						<a href="/about" class="btn btn-secondary">About Us</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Latest Articles Section -->
		<section id="latest-articles" class="latest-articles">
			<div class="container">
				<div class="section-header">
					<h2>Latest Articles</h2>
					<p>Your daily dose of Hamptons satire and social commentary</p>
				</div>
				<div class="articles-grid">
					{articles.map((article, index) => (
						<ArticleCard 
							title={article.title}
							description={article.description}
							date={article.date}
							image={article.image}
							imageAlt={article.imageAlt}
							slug={article.slug}
							featured={article.featured}
						/>
					))}
				</div>
			</div>
		</section>

		<!-- Weekend Guide Section -->
		<section class="weekend-section">
			<div class="container">
				<div class="section-header">
					<h2>Weekend Guide</h2>
					<p>Essential tips for surviving (and thriving) in the Hamptons</p>
				</div>
				<div class="weekend-grid">
					<div class="weekend-card">
						<div class="weekend-icon">😰</div>
						<h3>What to Worry About</h3>
						<p>Whether your neighbor's new infinity pool is actually infinite, or just really expensive.</p>
					</div>
					<div class="weekend-card">
						<div class="weekend-icon">🎯</div>
						<h3>What to Do</h3>
						<p>Pretend you've been coming here "forever" while asking directions to the nearest Starbucks.</p>
					</div>
					<div class="weekend-card">
						<div class="weekend-icon">💸</div>
						<h3>What Will Make You Say "Only in the Hamptons"</h3>
						<p>Seeing someone pay $150 for a beach umbrella that costs $25 at Target, but "it's the good kind."</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Weather Section -->
		<section class="weather-section">
			<div class="container">
				<div class="weather-card" id="weather-report">
					<div class="weather-icon">🌤️</div>
					<div class="weather-content">
						<h3>Hamptons Weather Report</h3>
						<p>Click for today's forecast</p>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.main {
		min-height: 100vh;
	}

	/* Hero Section */
	.hero {
		background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
		color: white;
		padding: 6rem 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
		opacity: 0.3;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3.5rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
		color: white;
		text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
	}

	.hero-subtitle {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		color: #cbd5e1;
		font-weight: 400;
	}

	.hero-quote {
		margin: 2rem 0;
		padding: 2rem;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 16px;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.hero-quote blockquote {
		font-size: 1.1rem;
		font-style: italic;
		color: #fbbf24;
		margin: 0;
		quotes: '"' '"' "'" "'";
	}

	.hero-quote blockquote::before {
		content: open-quote;
		font-size: 2rem;
		color: #fbbf24;
		line-height: 0;
		margin-right: 0.5rem;
		vertical-align: -0.4em;
	}

	.hero-quote blockquote::after {
		content: close-quote;
		font-size: 2rem;
		color: #fbbf24;
		line-height: 0;
		margin-left: 0.5rem;
		vertical-align: -0.4em;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-top: 2rem;
	}

	/* Section Headers */
	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: #1f2937;
	}

	.section-header p {
		font-size: 1.1rem;
		color: #6b7280;
		max-width: 600px;
		margin: 0 auto;
	}

	/* Latest Articles Section */
	.latest-articles {
		padding: 5rem 0;
		background: #f8fafc;
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	/* Weekend Section */
	.weekend-section {
		padding: 5rem 0;
		background: white;
	}

	.weekend-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.weekend-card {
		background: white;
		padding: 2rem;
		border-radius: 16px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		border: 1px solid #f1f5f9;
		text-align: center;
		transition: all 0.3s ease;
	}

	.weekend-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
	}

	.weekend-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.weekend-card h3 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		color: #1f2937;
	}

	.weekend-card p {
		color: #6b7280;
		line-height: 1.6;
	}

	/* Weather Section */
	.weather-section {
		padding: 3rem 0;
		background: #f8fafc;
	}

	.weather-card {
		background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
		color: white;
		padding: 2rem;
		border-radius: 16px;
		display: flex;
		align-items: center;
		gap: 1.5rem;
		max-width: 500px;
		margin: 0 auto;
		cursor: pointer;
		transition: all 0.3s ease;
		box-shadow: 0 10px 25px rgba(46, 112, 97, 0.3);
	}

	.weather-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 20px 40px rgba(46, 112, 97, 0.4);
	}

	.weather-icon {
		font-size: 3rem;
	}

	.weather-content h3 {
		margin: 0 0 0.5rem 0;
		color: white;
	}

	.weather-content p {
		margin: 0;
		color: #cbd5e1;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.articles-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.weekend-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	/* Enhanced Latest Articles Styling */
	.latest-articles {
		background: white;
		border-radius: 20px;
		margin: 2rem 0;
		box-shadow: 0 8px 30px rgba(46, 112, 97, 0.1);
		padding: 3rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h2 {
		color: #2e7061;
		font-size: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.section-header p {
		color: #666;
		font-size: 1.1rem;
		max-width: 600px;
		margin: 0 auto;
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		padding: 0 2rem;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.hero-actions {
			flex-direction: column;
			align-items: center;
		}

		.articles-grid,
		.weekend-grid {
			grid-template-columns: 1fr;
		}

		.section-header h2 {
			font-size: 2rem;
		}

		.latest-articles,
		.weekend-section {
			padding: 3rem 0;
		}

		.articles-grid {
			padding: 0 1rem;
		}
	}
</style>

<script>
	// Interactive weather report
	document.addEventListener('DOMContentLoaded', function() {
		const weatherReport = document.getElementById('weather-report');
		
		if (weatherReport) {
			weatherReport.addEventListener('click', function() {
				const forecasts = [
					"Sunny with a chance of pretentiousness",
					"Partly cloudy with scattered Range Rovers",
					"Clear skies, perfect for Instagram photos",
					"Light breeze, ideal for beach yoga",
					"High humidity, great for complaining about the weather"
				];
				
				const randomForecast = forecasts[Math.floor(Math.random() * forecasts.length)];
				this.innerHTML = `
					<div class="weather-icon">🌤️</div>
					<div class="weather-content">
						<h3>Today's Forecast</h3>
						<p>${randomForecast}</p>
					</div>
				`;
				
				// Reset after 3 seconds
				setTimeout(() => {
					this.innerHTML = `
						<div class="weather-icon">🌤️</div>
						<div class="weather-content">
							<h3>Hamptons Weather Report</h3>
							<p>Click for today's forecast</p>
						</div>
					`;
				}, 3000);
			});
		}
	});

	// Easter egg: Press 'H' for Hamptons facts
	document.addEventListener('keydown', function(e) {
		if (e.key.toLowerCase() === 'h') {
			const facts = [
				"Did you know? The word 'Hamptons' comes from the Old English 'ham' meaning 'home' and 'ton' meaning 'town'.",
				"Fun fact: The Hamptons has more millionaires per capita than anywhere else in the US.",
				"Interesting: The average home price in the Hamptons is $2.5 million.",
				"Trivia: The Hamptons was originally a farming community before becoming a summer destination.",
				"Fact: There are more Range Rovers per square mile in the Hamptons than anywhere else in the world."
			];
			
			const randomFact = facts[Math.floor(Math.random() * facts.length)];
			alert(`Hamptons Fact: ${randomFact}`);
		}
	});
</script>

