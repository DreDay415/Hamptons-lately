---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ArticleCard from '../components/ArticleCard.astro';

const title = "Weekend Guide - Hamptons Lately";
const description = "Your essential guide to surviving the Hamptons weekend scene, from where to be seen to where to hide from the paparazzi.";

// Weekend-focused articles
const weekendArticles = [
	{
		title: "Weekend Spotlight: The Hamptons Guide to Being Seen",
		description: "A comprehensive guide to positioning yourself in the right places at the right times to maximize your Instagram potential and social media clout.",
		date: "September 1, 2025",
		image: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Hamptons Weekend Scene",
		slug: "weekend-spotlight-hamptons-guide",
		category: "Weekend Guide"
	},
	{
		title: "Best Bar in Sag Harbor: Murf's Corner Bar (According to Everyone Who's Never Been)",
		description: "Local residents unanimously declare Murf's Corner Bar the best bar in Sag Harbor, despite most of them having never actually set foot inside.",
		date: "August 30, 2025",
		image: "https://images.unsplash.com/photo-1514933651103-005eec06c04b?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Sag Harbor Bar Scene",
		slug: "best-bar-sag-harbor-murfs-corner-bar",
		category: "Weekend Guide"
	},
	{
		title: "Meditation Studio Offers 'Pay to Breathe' Class for $200/Hour",
		description: "New wellness center introduces premium breathing classes where participants pay $200 per hour to learn how to 'breathe like a millionaire.'",
		date: "August 28, 2025",
		image: "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Luxury Meditation Studio",
		slug: "meditation-studio-offers-class-pay-to-breathe",
		category: "Weekend Guide"
	},
	{
		title: "Restaurant Offers 'Locals Discount' on $85 Burger",
		description: "Upscale eatery introduces special pricing for year-round residents, reducing the cost of their signature burger from $85 to a mere $75.",
		date: "August 25, 2025",
		image: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Luxury Restaurant",
		slug: "restaurant-locals-discount-85-dollar-burger",
		category: "Weekend Guide"
	}
];
---

<Layout title={title} description={description}>
	<Header />
	
	<main class="main">
		<div class="container">
			<div class="page-header">
				<h1>Weekend Guide</h1>
				<p class="page-subtitle">Your essential guide to surviving the Hamptons weekend scene</p>
			</div>

			<section class="articles-section">
				<div class="articles-grid">
					{weekendArticles.map(article => (
						<ArticleCard 
							title={article.title}
							description={article.description}
							date={article.date}
							image={article.image}
							imageAlt={article.imageAlt}
							slug={article.slug}
							category={article.category}
						/>
					))}
				</div>
			</section>

			<section class="weekend-tips">
				<h2>Weekend Survival Tips</h2>
				<div class="tips-grid">
					<div class="tip-card">
						<h3>üöó Traffic Strategy</h3>
						<p>Leave Manhattan at 2 AM on Friday or don't leave at all. The LIE becomes a parking lot by 3 PM.</p>
					</div>
					<div class="tip-card">
						<h3>üì∏ Photo Ops</h3>
						<p>Best lighting for beach selfies is 6:30 PM. Any later and you'll look like a silhouette.</p>
					</div>
					<div class="tip-card">
						<h3>üç∏ Happy Hour</h3>
						<p>Most bars offer 'happy hour' from 4-6 PM, where drinks are only $25 instead of $35.</p>
					</div>
					<div class="tip-card">
						<h3>üèñÔ∏è Beach Access</h3>
						<p>Public beaches are free, but parking costs $50. Private beaches cost $200 but include a chair.</p>
					</div>
				</div>
			</section>
		</div>
	</main>

	<Footer />
</Layout>

<style>
	.main {
		min-height: 100vh;
		background: #f8fafc;
		padding: 2rem 0;
	}

	.page-header {
		text-align: center;
		margin-bottom: 3rem;
		padding: 2rem 0;
		background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
		border-radius: 16px;
		color: white;
	}

	.page-header h1 {
		font-size: 3rem;
		font-weight: 700;
		margin: 0 0 1rem 0;
		background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.page-subtitle {
		font-size: 1.2rem;
		color: #cbd5e1;
		margin: 0;
		font-weight: 300;
	}

	.articles-section {
		margin-bottom: 4rem;
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.weekend-tips {
		background: white;
		border-radius: 16px;
		padding: 3rem;
		box-shadow: 0 8px 30px rgba(46, 112, 97, 0.1);
	}

	.weekend-tips h2 {
		font-size: 2rem;
		color: #2e7061;
		margin-bottom: 2rem;
		text-align: center;
	}

	.tips-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.tip-card {
		background: #f8fafc;
		border: 2px solid #e2e8f0;
		border-radius: 12px;
		padding: 1.5rem;
		transition: all 0.3s ease;
	}

	.tip-card:hover {
		border-color: #2e7061;
		transform: translateY(-4px);
		box-shadow: 0 8px 25px rgba(46, 112, 97, 0.15);
	}

	.tip-card h3 {
		font-size: 1.1rem;
		color: #2e7061;
		margin: 0 0 1rem 0;
		font-weight: 600;
	}

	.tip-card p {
		color: #64748b;
		line-height: 1.6;
		margin: 0;
		font-size: 0.95rem;
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2.5rem;
		}

		.articles-grid {
			grid-template-columns: 1fr;
		}

		.tips-grid {
			grid-template-columns: 1fr;
		}

		.weekend-tips {
			padding: 2rem;
		}
	}
</style>
