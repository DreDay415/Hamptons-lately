<style>
	.main {
		padding: 2rem 0;
	}

	.article {
		max-width: 800px;
		margin: 0 auto;
	}

	.article-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.article-meta {
		margin-bottom: 1rem;
	}

	.article-date {
		color: #7f8c8d;
		font-size: 0.9rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-right: 1rem;
	}

	.article-author {
		color: #7f8c8d;
		font-style: italic;
	}

	.article-title {
