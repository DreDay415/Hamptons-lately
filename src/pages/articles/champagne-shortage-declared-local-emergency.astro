	}

	.related-articles {
		margin-top: 4rem;
		padding-top: 3rem;
		border-top: 2px solid #ecf0f1;
	}

	.related-articles h3 {
		margin-bottom: 2rem;
		color: #2c3e50;
	}

	.related-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.related-card {
		background: white;
		padding: 1.5rem;
		border-radius: 8px;
		box-shadow: 0 2px 15px rgba(0,0,0,0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
