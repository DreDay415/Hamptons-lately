---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ArticleCard from '../components/ArticleCard.astro';

const title = "Celebrities - Hamptons Lately";
const description = "The latest celebrity sightings, scandals, and social media drama from the Hamptons social scene.";

// Celebrity-focused articles
const celebrityArticles = [
	{
		title: "Local Man Survives Entire Summer Without Instagram",
		description: "Heroic resident goes 90 days without posting sunset photos, beach selfies, or food pics. 'It was touch and go there for a while,' says concerned neighbors.",
		date: "September 3, 2025",
		image: "https://images.unsplash.com/photo-1611162616475-46b635cb6868?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Instagram App Store on iPad",
		slug: "local-man-survives-summer-without-instagram",
		category: "Celebrity Lifestyle"
	},
	{
		title: "Champagne Shortage Declared Local Emergency",
		description: "Local officials declare a state of emergency after Dom P√©rignon runs out at three consecutive parties, leaving socialites to drink 'regular' champagne.",
		date: "August 30, 2025",
		image: "https://images.unsplash.com/photo-1510812431401-41d2bd2722f3?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Champagne Bottles",
		slug: "champagne-shortage-declared-local-emergency",
		category: "Celebrity Lifestyle"
	},
	{
		title: "Tesla Owner Parks at Charging Station, Uses Fire Hydrant Instead",
		description: "Local Tesla owner creates innovative charging solution by connecting his car to a fire hydrant, claiming it's 'more sustainable' than waiting in line.",
		date: "August 28, 2025",
		image: "https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Tesla Car",
		slug: "tesla-owner-charging-station-fire-hydrant",
		category: "Celebrity Lifestyle"
	},
	{
		title: "Whale Sighted, Mistaken for 'New Minimalist Yacht Design'",
		description: "Local yacht enthusiasts excitedly photograph what they believe is a revolutionary new minimalist yacht design, only to discover it's just a humpback whale.",
		date: "August 25, 2025",
		image: "https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=1200&h=800&fit=crop&crop=center",
		imageAlt: "Humpback Whale",
		slug: "whale-sighted-mistaken-minimalist-yacht",
		category: "Celebrity Lifestyle"
	}
];
---

<Layout title={title} description={description}>
	<Header />
	
	<main class="main">
		<div class="container">
			<div class="page-header">
				<h1>Celebrities</h1>
				<p class="page-subtitle">The latest from the Hamptons social scene</p>
			</div>

			<section class="articles-section">
				<div class="articles-grid">
					{celebrityArticles.map(article => (
						<ArticleCard 
							title={article.title}
							description={article.description}
							date={article.date}
							image={article.image}
							imageAlt={article.imageAlt}
							slug={article.slug}
							category={article.category}
						/>
					))}
				</div>
			</section>

			<section class="celebrity-spotlight">
				<h2>Celebrity Spotlight</h2>
				<div class="spotlight-grid">
					<div class="spotlight-card">
						<h3>üåü Most Instagrammed Location</h3>
						<p><strong>Coopers Beach</strong> - 47,000 posts this summer, mostly of the same sunset from slightly different angles.</p>
					</div>
					<div class="spotlight-card">
						<h3>üì∏ Social Media Drama</h3>
						<p><strong>Beach Selfie Gate</strong> - Local influencer caught using a selfie stick that was "too long" according to beach regulations.</p>
					</div>
					<div class="spotlight-card">
						<h3>üçæ Party of the Week</h3>
						<p><strong>Sunset Soir√©e</strong> - $500 per person, includes one glass of champagne and unlimited photo opportunities.</p>
					</div>
					<div class="spotlight-card">
						<h3>üöÅ Helicopter Sightings</h3>
						<p><strong>47 this week</strong> - Mostly paparazzi, a few actual celebrities, and one lost tourist from Manhattan.</p>
					</div>
				</div>
			</section>

			<section class="social-media-watch">
				<h2>Social Media Watch</h2>
				<div class="social-stats">
					<div class="stat-item">
						<span class="stat-number">2.3M</span>
						<span class="stat-label">#Hamptons posts this summer</span>
					</div>
					<div class="stat-item">
						<span class="stat-number">847</span>
						<span class="stat-label">Average posts per influencer</span>
					</div>
					<div class="stat-item">
						<span class="stat-number">$2,500</span>
						<span class="stat-label">Average cost per sponsored post</span>
					</div>
					<div class="stat-item">
						<span class="stat-number">12</span>
						<span class="stat-label">Hours spent editing per photo</span>
					</div>
				</div>
			</section>
		</div>
	</main>

	<Footer />
</Layout>

<style>
	.main {
		min-height: 100vh;
		background: #f8fafc;
		padding: 2rem 0;
	}

	.page-header {
		text-align: center;
		margin-bottom: 3rem;
		padding: 2rem 0;
		background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
		border-radius: 16px;
		color: white;
	}

	.page-header h1 {
		font-size: 3rem;
		font-weight: 700;
		margin: 0 0 1rem 0;
		background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.page-subtitle {
		font-size: 1.2rem;
		color: #cbd5e1;
		margin: 0;
		font-weight: 300;
	}

	.articles-section {
		margin-bottom: 4rem;
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.celebrity-spotlight {
		background: white;
		border-radius: 16px;
		padding: 3rem;
		box-shadow: 0 8px 30px rgba(46, 112, 97, 0.1);
		margin-bottom: 3rem;
	}

	.celebrity-spotlight h2 {
		font-size: 2rem;
		color: #2e7061;
		margin-bottom: 2rem;
		text-align: center;
	}

	.spotlight-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.spotlight-card {
		background: #f8fafc;
		border: 2px solid #e2e8f0;
		border-radius: 12px;
		padding: 1.5rem;
		transition: all 0.3s ease;
	}

	.spotlight-card:hover {
		border-color: #2e7061;
		transform: translateY(-4px);
		box-shadow: 0 8px 25px rgba(46, 112, 97, 0.15);
	}

	.spotlight-card h3 {
		font-size: 1.1rem;
		color: #2e7061;
		margin: 0 0 1rem 0;
		font-weight: 600;
	}

	.spotlight-card p {
		color: #64748b;
		line-height: 1.6;
		margin: 0;
		font-size: 0.95rem;
	}

	.social-media-watch {
		background: linear-gradient(135deg, #2e7061 0%, #225744 100%);
		border-radius: 16px;
		padding: 3rem;
		color: white;
	}

	.social-media-watch h2 {
		font-size: 2rem;
		margin-bottom: 2rem;
		text-align: center;
		color: white;
	}

	.social-stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.stat-item {
		text-align: center;
		padding: 1.5rem;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		backdrop-filter: blur(10px);
	}

	.stat-number {
		display: block;
		font-size: 2.5rem;
		font-weight: 700;
		color: #fbbf24;
		margin-bottom: 0.5rem;
	}

	.stat-label {
		font-size: 0.9rem;
		color: #cbd5e1;
		line-height: 1.4;
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2.5rem;
		}

		.articles-grid {
			grid-template-columns: 1fr;
		}

		.spotlight-grid {
			grid-template-columns: 1fr;
		}

		.social-stats {
			grid-template-columns: repeat(2, 1fr);
		}

		.celebrity-spotlight,
		.social-media-watch {
			padding: 2rem;
		}
	}
</style>
